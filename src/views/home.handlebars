<header>
  <nav>
    <h1>Desafio</h1>
    <ul>
      <li>
        <a href="/">Home</a>
      </li>
      <li>
        <a href="/realTimeProducts">Real Time Products</a>
      </li>
      <li>

      <a href="/carts/6633a148908d0e9e27814a8a"><button class="btn btn-primary" type="button"><i class="fa-solid fa-cart-shopping"></i></button></a>
      </li>
    </ul>
  </nav>
  <hr />
</header>
<main class="mainProducts">
  <article id="products">

    {{#each products}}
      <div class="card cardEcommerce" style="width: 370px;height: 600px">
        <img
          src="
      "
          class="card-img-top style="
          height="300rem"
          alt={{description}}
        />
        <div class="card-body">
          <p class="card-title fw-bold fs-5">{{title}}</p>
          <p class="card-text"><small class="text-body-secondary">
              {{description}}
            </small></p>
          <p class="card-text precio fw-bold">${{price}}</p>
          <p class="card-text"><small class="text-body-secondary">
              stock:
              {{stock}}
            </small></p>
          <button id=`btnAdd-{{code}}` class="btn btn-success" onclick="addToCart('{{_id}}')">Add</button>
        </div>
      </div>

    {{/each}}
    
  </article>
<div class="pagination">

    {{#if hasPrevPage}}
        <a href={{prevLink}}><button>Ant</button></a>
        {{else}}
        <button disabled>Ant</button>
    {{/if}}

      <strong>Page: {{page}}</strong>

    {{#if hasNextPage}}
        <a href={{nextLink}}><button>Sig</button></a>
        {{else}}
        <button disabled>Sig</button>
    {{/if}}

</main>
<script
  type="text/javascript"
  src="https://cdn.jsdelivr.net/npm/toastify-js"
></script>
<script src="/js/cart.js"></script>